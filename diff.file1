# Sample Python program: Check if a number is prime

def is_prime(n):
    """Returns True if n is a prime number, else False."""
    if n <= 1:
        return False
    for i in range(2, int(n**0.5) + 1):
        if n % i == 0:
            return False
    return True

# Test the function with numbers from 1 to 20
for num in range(1, 21):
    if is_prime(num):
        print(f"{num} is a prime number.")
    else:
        print(f"{num} is not a prime number.")

